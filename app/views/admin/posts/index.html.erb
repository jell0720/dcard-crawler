<%= render 'admin/shared/header' %>
<div class="container">
  <div class="card">
    <div class="card-body">
      <%= search_form_for [:admin, @q], class: 'form-row align-items-center' do |f| %>
        <div class="col-auto"><i class="fas fa-search"></i></div>
        <div class="form-group col-auto">
          <label>Title</label>
          <%= f.search_field :title_cont, class: 'form-control' %>
        </div>
        <div class="form-group col-auto">
          <label>Content</label>
          <%= f.search_field :comments_content_cont, class: 'form-control' %>
        </div>
        <div class="form-group col-2">
          <label>Comments</label>
          <div class="d-flex align-items-center">
            <div class="mr-1">
              <%= f.number_field :comments_count_gteq, class: 'form-control', placeholder: '>=' %>
            </div>
            ~
            <div class="ml-1">
              <%= f.number_field :comments_count_lteq, class: 'form-control', placeholder: '<=' %>
            </div>
          </div>
        </div>
        <div class="form-group col-2">
          <label>Reviews</label>
          <div class="d-flex align-items-center">
            <div class="mr-1">
              <%= f.number_field :reviews_count_gteq, class: 'form-control', placeholder: '>=' %>
            </div>
            ~
            <div class="ml-1">
              <%= f.number_field :reviews_count_lteq, class: 'form-control', placeholder: '<=' %>
            </div>
          </div>
        </div>
        <div class="btn-group col-auto">
          <%= f.button class: 'btn btn-sm btn-outline-secondary' do %>
            <i class="fas fa-search"></i>
          <% end %>
          <%= link_to admin_posts_path, class: 'btn btn-sm btn-outline-secondary' do %>
            <i class="fas fa-undo"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <br>
  <div class="d-flex align-items-center">
  </div>
  <br>
  <div>
    <%= paginate @posts %>
    <table class="table mt-2">
      <thead class="thead-light">
        <tr>
          <th>Forum / Title</th>
          <th>
            <%= sort_link @q, :comments_count do %>
              Crawled
            <% end %> /
            <%= sort_link @q, :comment_count do %>
              Comments
            <% end %>
          </th>
          <th>
            <%= sort_link @q, :reviews_count do %>
              Reviews
            <% end %>
          </th>
          <th>
            <div id="crawl-posts-btn" class="btn btn-sm btn-outline-secondary mr-1 mt-1">
              <i class="fas fa-cloud-download-alt"></i> Crawl (this page)
            </div>
            <div id="analysis-posts-btn" class="btn btn-sm btn-outline-secondary mt-1">
              <i class="fas fa-smile"></i> Sentiment Analysis (this page)
            </div>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td>
              <%= link_to post.forum_name, admin_forum_path(post.forum_id) %> /
              <%= post.title %>
              <%= link_to post.dcard_url, target: :_blank do %>
                <i class="fas fa-external-link-alt"></i>
              <% end %>
            </td>
            <td><%= post.comments_count %> / <%= post.comment_count %></td>
            <td><%= post.reviews_count %></td>
            <td class="btn-toolbar">
              <div class="btn-group mr-1 my-1">
                <%= link_to admin_post_path(post), class: 'btn btn-sm btn-outline-secondary' do %>
                  <i class="fas fa-info-circle"></i>
                <% end %>
                <%= link_to admin_reviews_path(q: { post_id_eq: post.id }), class: 'btn btn-sm btn-outline-secondary' do %>
                  <i class="fas fa-info-circle"></i> Reviews
                <% end %>
              </div>
              <div class="dropdown mr-1 my-1">
                <div class="btn btn-sm btn-outline-secondary dropdown-toggle" data-toggle="dropdown">
                  <i class="fas fa-project-diagram"></i> Graph
                </div>
                <div class="dropdown-menu">
                  <%= link_to '2D' ,graph_admin_post_path(post), class: 'dropdown-item'%>
                  <%= link_to '3D' ,graph3d_admin_post_path(post), class: 'dropdown-item'%>
                </div>
              </div>
              <div class="dropdown mr-1 my-1">
                <div class="btn btn-sm btn-outline-secondary dropdown-toggle" data-toggle="dropdown">
                  <i class="fas fa-tasks"></i> Tasks
                </div>
                <div class="dropdown-menu">
                  <%= link_to admin_post_path(post), method: :patch, remote: true, class: 'dropdown-item', id: "crawl-post-#{post.dcard_id}-btn" do %>
                    <i class="fas fa-cloud-download-alt"></i> Crawl
                  <% end %>
                  <%= link_to sentiment_analysis_admin_post_path(post), method: :post, remote: true, class: 'dropdown-item', id: "analysis-post-#{post.dcard_id}-btn" do %>
                    <i class="fas fa-smile"></i> Sentiment Analysis
                  <% end %>
                  <%= link_to compute_embedding_admin_post_path(post), method: :post, remote: true, class: 'dropdown-item', id: "compute-embedding-post-#{post.dcard_id}-btn" do %>
                    <i class="fas fa-vector-square"></i> Compute Embedding
                  <% end %>
                  <div class="dropdown-header"><i class="fas fa-file-download"></i> Segment by</div>
                  <%= link_to 'jieba.txt', segment_admin_post_path(post, method: 'jieba', format: :text), method: :post, class: 'dropdown-item' %>
                  <%= link_to 'snownlp.txt', segment_admin_post_path(post, method: 'snownlp', format: :text), method: :post, class: 'dropdown-item' %>
                  <%= link_to 'pkuseg.txt', segment_admin_post_path(post, method: 'pkuseg', format: :text), method: :post, class: 'dropdown-item' %>
                  <%= link_to 'jieba.xlsx', segment_admin_post_path(post, method: 'jieba', format: :xlsx), method: :post, class: 'dropdown-item' %>
                  <%= link_to 'snownlp.xlsx', segment_admin_post_path(post, method: 'snownlp', format: :xlsx), method: :post, class: 'dropdown-item' %>
                  <%= link_to 'pkuseg.xlsx', segment_admin_post_path(post, method: 'pkuseg', format: :xlsx), method: :post, class: 'dropdown-item' %>
                </div>
              </div>
              <%= link_to admin_post_path(post), class: 'btn btn-sm btn-outline-danger my-1', method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @posts %>
  </div>
</div>
<script type="text/javascript">
  $('#crawl-posts-btn').click(function () {
    $('a[id^="crawl-post-"][id$="-btn"]').not('.disabled').toArray().forEach(btn => btn.click())
  })
  $('#analysis-posts-btn').click(function () {
    $('a[id^="analysis-post-"][id$="-btn"]').not('.disabled').toArray().forEach(btn => btn.click())
  })
</script>
