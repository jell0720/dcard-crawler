<% flash.each do |type, message| %>
  <% if type.to_s == 'notice' %>
    <div class="alert alert-dismissible fade show alert-success">
      <%= message %>
      <button type="button" class="close" data-dismiss="alert">
        <span>&times;</span>
      </button>
    </div>
  <% elsif type.to_s == 'alert' %>
    <div class="alert alert-dismissible fade show alert-danger">
      <%= message %>
      <button type="button" class="close" data-dismiss="alert">
        <span>&times;</span>
      </button>
    </div>
  <% else %>
    <div class="alert alert-dismissible fade show alert-primary">
      <%= message %>
      <button type="button" class="close" data-dismiss="alert">
        <span>&times;</span>
      </button>
    </div>
  <% end %>
<% end %>
